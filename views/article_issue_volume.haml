%p#citation
  %span{ :property => 'schema:isPartOf', :resource => @bib.issue.id }
    %span{ :property => 'schema:isPartOf', :resource => @bib.volume.id }
      %span{ :property => 'schema:isPartOf', :resource => @bib.periodical.id }
        %span.label Periodical Title:
        %span.value{ :property => 'schema:name' }= @bib.periodical.name
        %span.label Volume:
        %span.value{ :property => 'schema:volumeNumber' }= @bib.volume.volume_number
        %span.label Issue:
        %span.value{ :property => 'schema:issueNumber' }= @bib.issue.issue_number
    - if @bib.page_start or @bib.pagination   
      %span.label Pages:
      %span.value
    - if @bib.page_start
      %span.value{ :property => 'schema:pageStart' }= @bib.page_start
      - if @bib.page_end
        - 
        %span.value{ :property => 'schema:pageEnd' }= @bib.page_end
    - else
      %span.value{ :property => 'schema:pagination' }= @bib.paginationn